%h3
  = @query
%h1= "Precio Medio: #{@average}" if @average.present?
%h1= "Precio Medio Foil: #{@average_foil}" if @average_foil.present?

= render 'search'
-if !@average.present?
  .clear 
- if @several.present?
  %table.results
    %tr
      %th Card
      %th Expansion
      %th Rarity
      %th
      %th
    - @versions.each do |version|
      -if !version.empty? #De este scrapeo viene uno vacio siempre!
        %tr
          %td= version["card"]
          %td= version["expansion"]
          %td= version["rarity"]
          %td= link_to "Precio medio",average_card_path(:url => version["link"])
.img_container
  = image_tag @img if @img.present?
.clear